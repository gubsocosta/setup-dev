[core]
	editor = vim
[alias]
	com = !git add --all && git commit -m
	cb = checkout -b
	ss = status -sb
	sf = show --name-only
	fe = fetch --prune
	lp = log --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30
	incoming = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
	outgoing = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)
	unstage = reset HEAD --
	undo = checkout --
	rollback = reset --soft HEAD~1
	discard-all-changes = !git clean -fd && git checkout -- 
[pull]
	ff = only
	rebase = false
[init]
	defaultBranch = main
[color]
	ui = auto
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"] 
	cmd = /usr/bin/meld $LOCAL $REMOTE [merge] 
	conflictstyle = diff3 
	tool = mymeld
[mergetool "mymeld"]
	prompt = false
	keepBackup = false
	keepTemporaries = false
	cmd = /usr/bin/meld --auto-merge --output $MERGED $LOCAL $BASE $REMOTE --diff $BASE $LOCAL --diff $BASE $REMOTE
